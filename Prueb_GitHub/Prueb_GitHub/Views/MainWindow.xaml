<Window x:Class="Prueb_GitHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prueb_GitHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="411*"/>
        </Grid.RowDefinitions>

        <Menu x:Name="MenuItems" Grid.ColumnSpan="2" >
            <MenuItem Header="Afegir Tasca" Height="23" Width="85" Click="MenuItem_Click">
                <MenuItem Header="Afegir"/>
            </MenuItem>
            <MenuItem Header="Modificar Tasca">
                <MenuItem Header="Modificar Tasca"/>
                <MenuItem Header="Eliminar Tasca"/>
            </MenuItem>
            
        </Menu>
    </Grid>
</Window>
