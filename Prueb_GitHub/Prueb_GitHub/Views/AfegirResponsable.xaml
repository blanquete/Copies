<Window x:Class="Prueb_GitHub.Views.AfegirResponsable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prueb_GitHub.Views"
        mc:Ignorable="d"
        Title="Afegir responsable" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblNomResponsable" Content="Nom responsable: " Grid.Column="0" Grid.Row="0" Margin="30,30,30,30"/>
        <TextBox x:Name="txtBoxNomResponsable" Grid.Row="0" Grid.Column="1" Margin="10,30,30,37"></TextBox>
        <Button x:Name="btnAfegirReponsable" Content="Afegir responsable" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="20,20,20,26" Click="btnAfegirReponsable_Click"/>

    </Grid>
</Window>
